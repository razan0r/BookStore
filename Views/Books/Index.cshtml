@using BookStore.ViewModel

@model List<BookVM>
@section Title {
Books
}
@section SubTitle {
  Show
}

@section Buttons {
    @if (User.Identity.IsAuthenticated)
    {
        <a asp-controller="Books" asp-action="Create" class="btn btn-primary">Create</a>

    }
}
<div class="card-body">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th style="width: 10px">#</th>
                <th>Title</th>
                <th>Author</th>
                <th>Publisher</th>
                <th>publish Date</th>
                <th>Image</th>
                <th>Categories</th>
                 @if (User.Identity.IsAuthenticated)
                {
                    <th style="width:300px">Action</th>
                }
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="2">
                        <div class="alert alert-warning alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                            <h5><i class="icon fas fa-exclamation-triangle"></i> Alert!</h5>
                            no data
                        </div>
                    </td>
                </tr>

            }
            else
            {
                @foreach (var item in @Model)
                {
                    <tr>
                        <td>
                            @item.Id
                        </td>
                        <td>
                            @item.Title
                        </td>
                        <td>
                            @item.Author
                        </td>
                        <td>
                            @item.Publisher
                        </td>
                        <td>
                            @item.publishDate
                        </td>
                        <td>
                            <img src="~/img/books/@item.ImageUrl" width="50px"  />
                        </td>
                        <td>
                            @string.Join(", ",item.Categories)
                        </td>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <td>
                            <a class="btn btn-sm btn-primary" asp-controller="Books" asp-action="Edit"
                               asp-route-id="@item.Id">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a class="btn btn-sm btn-success" asp-controller="Books" asp-action="Details"
                               asp-route-id="@item.Id">
                                <i class="fas fa-info-circle"></i> Details
                            </a>
                            <a class="btn btn-sm btn-danger js-delete" href="#" data-id="@item.Id" >
                                <i class="fas fa-trash"></i> Delete
                            </a>
                         
                        </td> 
                        }
                       
                    </tr>
                }
            }

        </tbody>
    </table>
</div>


@section Scripts {
    <script>




        document.querySelectorAll(".js-delete").forEach((btn) => {
            btn.addEventListener("click", async () => {
                const id = btn.dataset.id;

                const response = await fetch(`/Books/Delete/${id}`, {
                    method: 'POST'
                });

                if (response.ok) {
                    Swal.fire({
                        title: "Are you sure?",
                        text: "You won't be able to revert this!",
                        icon: "warning",
                        showCancelButton: true,
                        confirmButtonColor: "#3085d6",
                        cancelButtonColor: "#d33",
                        confirmButtonText: "Yes, delete it!"
                    }).then((result) => {
                        if (result.isConfirmed) {
                            btn.closest("tr").remove();
                            Swal.fire({
                                title: "Deleted!",
                                text: "Category deleted successfuly.",
                                icon: "success"
                            });
                        }
                    });

                }
            })

        })

    </script>
}
