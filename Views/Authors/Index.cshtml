@using BookStore.ViewModel
@model List<AuthorVm>

@section Title {
Authors
}
@section SubTitle {
Show
}
@section Buttons {
    <a asp-controller="Authors" asp-action="Create" class="btn btn-primary">Create</a>
}
<div class="card-body">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th style="width: 10px">#</th>
                <th>Name</th>
                <th style="width:300px">Action</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="2">
                        <div class="alert alert-warning alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                            <h5><i class="icon fas fa-exclamation-triangle"></i> Alert!</h5>
                            no data
                        </div>
                    </td>
                </tr>

            }
            else
            {
                @foreach (var item in @Model)
                {
                    <tr>
                        <td>
                            @item.Id
                        </td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            <a class="btn btn-sm btn-primary" asp-controller="categories" asp-action="Edit"
                               asp-route-id="@item.Id">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a class="btn btn-sm btn-success" asp-controller="categories" asp-action="Details"
                               asp-route-id="@item.Id">
                                <i class="fas fa-info-circle"></i> Details
                            </a>
                            <a class="btn btn-sm btn-danger js-delete" href="#" data-id="@item.Id">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>

